{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Identity Managment  CRUD",
        "description": "Identity Managment Application API"
    },

    "servers": [
        {
            "url": "http://localhost:5000/idm/api",
            "description": "Local server"
        }
    ],

    "tags": [
        {
            "name": "Enterprises",
            "description": "API for enterprise in the system"
        }
    ],
    "paths": {
        "/permissions": {
            "get": {
                "tag": ["Enterprises"],
                "summary": "Get all permission in the system",
                "responses": {
                    "200": {
                        "description": "get all permissions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/responses/permissionArray"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": " Authorization information is missing or invalid."
                    },
                    "400": {
                        "description": "Bad request. Request body must be json and parameterId must be arry of integer"
                    },
                    "500": {
                        "description": "Unexpected error. Internal server error."
                    }
                }
            }
        },
        "/permissions/search": {
            "get": {
                "tag": ["Enterprises"],
                "summary": "get all permissions for specific feature",
                "parameters": [
                    {
                        "in": "query",
                        "name": "feature",
                        "type": "string",
                        "description": " feature name "
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/responses/permissionArray"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/roles": {
            "post": {
                "tag": ["Enterprises"],
                "summary": "create role with permissions ",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/createRole"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "role created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/responses/createRoleResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": " Authorization information is missing or invalid."
                    },

                    "500": {
                        "description": "Unexpected error. Internal server error."
                    }
                }
            },
            "get": {
                "tag": ["Enterprises"],
                "summary": "get all roles in the system",
                "responses": {
                    "200": {
                        "description": "get all roles successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/responses/roleArray"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": " Authorization information is missing or invalid."
                    },
                    "400": {
                        "description": "Bad request. Request body must be json and parameterId must be arry of integer"
                    },
                    "500": {
                        "description": "Unexpected error. Internal server error."
                    }
                }
            }
        },
        "/roles/{id}": {
            "get": {
                "tag": ["Enterprises"],
                "summary": "get specifc role with permission by feature",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "integer",
                        "description": "role id"
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/responses/roleWithPermissionObject"
                                }
                            }
                        }
                    },
                    "404": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/responses/notFound"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tag": ["Enterprises"],
                "summary": "update role with given permissions ",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "integer",
                        "description": "role id "
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/createRole"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "role created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/responses/createRoleResponse"
                                },
                                "example": {
                                    "code": 201,
                                    "message": "Role updated successfully.",
                                    "applicationErrorCode": 0
                                }
                            }
                        }
                    },
                    "401": {
                        "description": " Authorization information is missing or invalid."
                    },

                    "500": {
                        "description": "Unexpected error. Internal server error."
                    }
                }
            },
            "delete": {
                "tag": ["Enterprises"],
                "summary": "delete role  ",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "integer",
                        "description": "role id "
                    }
                ],

                "responses": {
                    "200": {
                        "description": "role deleted successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/responses/createRoleResponse"
                                },
                                "example": {
                                    "code": 200,
                                    "message": "Role deleted successfully.",
                                    "applicationErrorCode": 0
                                }
                            }
                        }
                    },
                    "401": {
                        "description": " Authorization information is missing or invalid."
                    },

                    "500": {
                        "description": "Unexpected error. Internal server error."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "createRole": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "name of role "
                    },
                    "description": {
                        "type": "string"
                    },

                    "enterpriseCode": {
                        "type": "string"
                    },
                    "permissionId": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "description": "permissions to that role"
                    }
                },
                "example": {
                    "name": "BA Entities Role",
                    "description": "Roles for CRUD Operations",
                    "enterpriseCode": "79622596-fc6a-4048-b0b6-ae40388fef8f",
                    "permissionId": [1, 2, 3]
                }
            }
        },
        "responses": {
            "createRoleResponse": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "integer",
                        "description": "status code "
                    },
                    "message": {
                        "type": "string",
                        "description": "sucess message from response"
                    },
                    "applicationErrorCode": {
                        "type": "integer"
                    }
                },
                "example": {
                    "code": 201,
                    "message": "Role created successfully.",
                    "applicationErrorCode": 0
                }
            },
            "permissionArray": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "status": {
                            "type": "string"
                        }
                    }
                },
                "example": {
                    "User": [
                        {
                            "id": 1,
                            "name": "user_add",
                            "description": "add user",
                            "status": "A"
                        }
                    ]
                }
            },
            "roleArray": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "status": {
                            "type": "string"
                        },
                        "permissions": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "integer"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "status": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "example": {
                    "roles": [
                        {
                            "id": 1,
                            "name": "BA Entities Role",
                            "description": "Roles for CRUD Operations",
                            "status": "A",
                            "permissions": [
                                {
                                    "id": 20,
                                    "name": "resource_add",
                                    "description": "Add Resource",
                                    "status": "A"
                                }
                            ]
                        }
                    ]
                }
            },
            "roleWithPermissionObject": {
                "type": "object",
                "properties": {
                    "role_id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "permissionByFeature": {
                        "type": "object",
                        "schema": {
                            "$ref": "#/components/responses/permissionArray"
                        }
                    }
                },
                "example": {
                    "id": 1,
                    "name": "BA Entities Role",
                    "description": "Roles for CRUD Operations",
                    "status": "A",
                    "permissionByFeature": {
                        "User": [
                            {
                                "id": 1,
                                "name": "user_add",
                                "description": "add user",
                                "status": "A"
                            }
                        ]
                    }
                }
            },
            "notFound": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "httpCode": {
                        "type": "integer"
                    }
                },
                "example": {
                    "code": "GET_Role_FAILED",
                    "message": "Unable to get role failed",
                    "httpCode": 404
                }
            }
        }
    },
    "securitySchemes": {
        "api_key": {
            "type": "apiKey",
            "in": "header",
            "name": "Authorization"
        }
    }
}
